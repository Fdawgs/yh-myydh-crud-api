{
	"name": "ydh-myydh-crud-api",
	"version": "1.1.9",
	"description": "Yeovil District Hospital NHSFT's RESTful CRUD API for the MyYDH app",
	"main": "src/app.js",
	"repository": "git+https://github.com/Fdawgs/ydh-myydh-crud-api.git",
	"homepage": "https://github.com/Fdawgs/ydh-myydh-crud-api",
	"bugs": {
		"url": "https://github.com/Fdawgs/ydh-myydh-crud-api/issues"
	},
	"license": "MIT",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"engines": {
		"node": ">=10.22.0"
	},
	"scripts": {
		"benchmark": "autocannon -H \"Authorization:Bearer testtoken\" \"http://0.0.0.0:8204/preferences/options\"",
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"jest": "jest --detectOpenHandles --runInBand",
		"jest-coverage": "jest --coverage --runInBand",
		"license-checker": "license-checker --production --summary",
		"lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"lint:prettier": "prettier . --write --ignore-path .gitignore",
		"lint:prettier:ci": "prettier . --check --ignore-path .gitignore",
		"start": "node .",
		"start:dev": "nodemon | pino-pretty --colorize",
		"test": "npm run lint && npm run jest"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm run lint:prettier:ci && npm run test"
		}
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/app.js"
		],
		"resetMocks": true,
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development",
			"SUPPRESS_SUPPORT": 1
		},
		"ignore": [
			"test_resources"
		],
		"verbose": true,
		"watch": [
			".env",
			"src"
		]
	},
	"prettier": {
		"endOfLine": "lf",
		"semi": true,
		"tabWidth": 4,
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^11.0.0",
		"autocannon": "^7.0.3",
		"conventional-changelog-cli": "^2.1.1",
		"coveralls": "^3.1.0",
		"eslint": "^7.17.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-jsdoc": "^31.0.8",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"faker": "^5.1.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"license-checker": "^25.0.1",
		"lodash": "^4.17.20",
		"nodemon": "^2.0.7",
		"pino-pretty": "^4.3.0",
		"prettier": "2.2.1"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"env-schema": "^2.0.1",
		"fastify": "^3.10.1",
		"fastify-accepts": "^2.0.1",
		"fastify-autoload": "^3.4.0",
		"fastify-bearer-auth": "^5.0.2",
		"fastify-cors": "^5.1.0",
		"fastify-disablecache": "^1.0.3",
		"fastify-helmet": "^5.1.0",
		"fastify-plugin": "^3.0.0",
		"fastify-swagger": "^4.0.0",
		"file-stream-rotator": "^0.5.7",
		"fluent-json-schema": "^2.0.3",
		"helmet": "^4.4.1",
		"http-errors": "^1.8.0",
		"mssql": "^6.3.1",
		"pino": "^6.10.0"
	}
}
