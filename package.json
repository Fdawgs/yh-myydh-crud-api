{
  "name": "ydh-myydh-crud-api",
  "version": "6.0.1",
  "description": "Yeovil District Hospital NHSFT's RESTful CRUD API for the MyYDH app",
  "main": "src/app.js",
  "repository": "git+https://github.com/Fdawgs/ydh-myydh-crud-api.git",
  "homepage": "https://github.com/Fdawgs/ydh-myydh-crud-api",
  "bugs": {
    "url": "https://github.com/Fdawgs/ydh-myydh-crud-api/issues"
  },
  "license": "MIT",
  "author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "benchmark": "autocannon -H \"Authorization:Bearer testtoken\" \"http://0.0.0.0:8204/preferences/options\"",
    "jest": "jest --detectOpenHandles --runInBand",
    "jest:coverage": "jest --coverage --runInBand",
    "lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
    "lint:licenses": "license-checker --direct --excludePackages=\"buffers@0.1.1\" --onlyAllow=\"0BSD;Apache-2.0;Apache 2.0;BSD;BSD-2-Clause;BSD-3-Clause;ISC;MIT;Python-2.0;Unlicense\" --production --summary",
    "lint:prettier": "prettier . --write --ignore-unknown",
    "lint:prettier:ci": "prettier . --check --ignore-unknown",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "start": "node .",
    "start:dev": "nodemon",
    "test": "npm run lint && npm run jest",
    "test:db:mssql:build": "docker run -p 1433:1433 --name ydh-myydh-crud-api-mssql -e ACCEPT_EULA=Y -e SA_PASSWORD=Password! -e MSSQL_PID=Express -d mcr.microsoft.com/mssql/server:2019-latest",
    "test:db:mssql:down": "docker stop ydh-myydh-crud-api-mssql",
    "test:db:mssql:nuke": "docker stop ydh-myydh-crud-api-mssql && docker rm -v ydh-myydh-crud-api-mssql",
    "test:db:mssql:up": "docker start ydh-myydh-crud-api-mssql",
    "test:db:postgres:build": "docker run -p 5432:5432 --name ydh-myydh-crud-api-postgres -e POSTGRES_DB=myydh_crud_api -e POSTGRES_PASSWORD=password -d postgres:13-alpine",
    "test:db:postgres:down": "docker stop ydh-myydh-crud-api-postgres",
    "test:db:postgres:nuke": "docker stop ydh-myydh-crud-api-postgres && docker rm -v ydh-myydh-crud-api-postgres",
    "test:db:postgres:up": "docker start ydh-myydh-crud-api-postgres"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageReporters": [
      "text",
      "lcovonly"
    ],
    "resetMocks": true,
    "testEnvironment": "node",
    "testTimeout": 10000
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development",
      "SUPPRESS_SUPPORT": 1
    },
    "ignore": [
      "test_resources"
    ],
    "verbose": true,
    "watch": [
      ".env",
      "src"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "autocannon": "^7.4.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsdoc": "^36.0.8",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.5.3",
    "glob": "^7.1.7",
    "husky": "^7.0.2",
    "is-html": "^2.0.0",
    "jest": "^27.0.6",
    "license-checker": "^25.0.1",
    "nodemon": "^2.0.12",
    "prettier": "2.3.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "env-schema": "^3.3.0",
    "fastify": "^3.20.2",
    "fastify-accepts": "^2.0.1",
    "fastify-autoload": "^3.8.1",
    "fastify-bearer-auth": "^6.0.0",
    "fastify-compress": "^3.6.0",
    "fastify-cors": "^6.0.2",
    "fastify-disablecache": "^2.0.2",
    "fastify-floc-off": "^1.0.1",
    "fastify-helmet": "^5.3.2",
    "fastify-plugin": "^3.0.0",
    "fastify-rate-limit": "^5.6.1",
    "fastify-sensible": "^3.1.1",
    "fastify-static": "^4.2.3",
    "fastify-swagger": "^4.9.0",
    "file-stream-rotator": "^0.5.7",
    "fluent-json-schema": "^3.0.1",
    "mssql": "^7.2.1",
    "pg": "^8.7.1",
    "pino": "^6.13.1",
    "pino-pretty": "^5.1.3",
    "redoc": "^2.0.0-rc.56",
    "under-pressure": "^5.7.0"
  }
}
