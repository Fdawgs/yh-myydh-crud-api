{
  "name": "ydh-myydh-crud-api",
  "version": "6.4.0",
  "description": "Yeovil District Hospital NHSFT's RESTful CRUD API for the MyYDH app",
  "main": "src/app.js",
  "repository": "git+https://github.com/Fdawgs/ydh-myydh-crud-api.git",
  "homepage": "https://github.com/Fdawgs/ydh-myydh-crud-api",
  "bugs": {
    "url": "https://github.com/Fdawgs/ydh-myydh-crud-api/issues"
  },
  "license": "MIT",
  "author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "benchmark": "autocannon -a 1000 -H \"Authorization:Bearer testtoken\" \"http://0.0.0.0:8204/preferences/options\"",
    "db:migrate": "node ./src/migrate.js",
    "jest": "jest --detectOpenHandles --runInBand",
    "jest:coverage": "jest --coverage --runInBand",
    "lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
    "lint:licenses": "license-checker --direct --excludePackages=\"caniuse-lite@1.0.30001312;url-template@2.0.8\" --onlyAllow=\"0BSD;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;MIT;Python-2.0;Unlicense\" --production --summary",
    "lint:prettier": "prettier . --write --ignore-unknown",
    "lint:prettier:ci": "prettier . --check --ignore-unknown",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "start": "node .",
    "start:migrate": "node ./src/migrate.js && node .",
    "start:dev": "nodemon",
    "test": "npm run lint && npm run jest",
    "test:db:mssql:build": "docker run -p 1433:1433 --name ydh-myydh-crud-api-mssql -e ACCEPT_EULA=Y -e SA_PASSWORD=Password! -e MSSQL_PID=Express -d mcr.microsoft.com/mssql/server:2019-latest",
    "test:db:mssql:down": "docker stop ydh-myydh-crud-api-mssql",
    "test:db:mssql:nuke": "docker stop ydh-myydh-crud-api-mssql && docker rm -v ydh-myydh-crud-api-mssql",
    "test:db:mssql:up": "docker start ydh-myydh-crud-api-mssql",
    "test:db:postgres:build": "docker run -p 5432:5432 --name ydh-myydh-crud-api-postgres -e POSTGRES_DB=myydh_crud_api -e POSTGRES_PASSWORD=password -d postgres:14-alpine",
    "test:db:postgres:down": "docker stop ydh-myydh-crud-api-postgres",
    "test:db:postgres:nuke": "docker stop ydh-myydh-crud-api-postgres && docker rm -v ydh-myydh-crud-api-postgres",
    "test:db:postgres:up": "docker start ydh-myydh-crud-api-postgres"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageReporters": [
      "text",
      "lcovonly"
    ],
    "resetMocks": true,
    "testEnvironment": "node",
    "testTimeout": 60000
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development",
      "SUPPRESS_SUPPORT": 1
    },
    "ignore": [
      "test_resources"
    ],
    "verbose": true,
    "watch": [
      ".env",
      "src"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "autocannon": "^7.7.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsdoc": "^37.9.5",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-security-node": "^1.1.1",
    "faker": "5.5.3",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "is-html": "^2.0.0",
    "jest": "^27.5.1",
    "license-checker": "^25.0.1",
    "nodemon": "^2.0.15",
    "playwright": "^1.19.2",
    "prettier": "2.5.1"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "env-schema": "^3.5.2",
    "fastify": "^3.27.3",
    "fastify-accepts": "^2.1.0",
    "fastify-autoload": "^3.11.0",
    "fastify-bearer-auth": "^6.2.0",
    "fastify-compress": "^4.0.1",
    "fastify-cors": "^6.0.3",
    "fastify-disablecache": "^2.0.6",
    "fastify-floc-off": "^1.0.5",
    "fastify-helmet": "^7.0.1",
    "fastify-plugin": "^3.0.1",
    "fastify-rate-limit": "^5.7.2",
    "fastify-sensible": "^3.1.2",
    "fastify-static": "^4.5.0",
    "fastify-swagger": "4.12.0",
    "file-stream-rotator": "^0.6.1",
    "fluent-json-schema": "^3.1.0",
    "jstoxml": "^3.1.0",
    "mssql": "^8.0.2",
    "pg": "^8.7.3",
    "pg-connection-string": "^2.5.0",
    "pino": "^7.8.0",
    "pino-pretty": "^7.5.3",
    "postgrator": "^5.0.1",
    "redoc": "^2.0.0-rc.64",
    "secure-json-parse": "^2.4.0",
    "under-pressure": "^5.8.0",
    "upath": "^2.0.1"
  }
}
