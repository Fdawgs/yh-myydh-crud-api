{
  "name": "ydh-myydh-crud-api",
  "version": "1.3.1",
  "description": "Yeovil District Hospital NHSFT's RESTful CRUD API for the MyYDH app",
  "main": "src/app.js",
  "repository": "git+https://github.com/Fdawgs/ydh-myydh-crud-api.git",
  "homepage": "https://github.com/Fdawgs/ydh-myydh-crud-api",
  "bugs": {
    "url": "https://github.com/Fdawgs/ydh-myydh-crud-api/issues"
  },
  "license": "MIT",
  "author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
  "engines": {
    "node": ">=10.22.0"
  },
  "scripts": {
    "benchmark": "autocannon -H \"Authorization:Bearer testtoken\" \"http://0.0.0.0:8204/preferences/options\"",
    "jest": "jest --detectOpenHandles --runInBand",
    "jest:coverage": "jest --coverage --runInBand",
    "lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
    "lint:licenses": "license-checker --direct --onlyAllow=\"0BSD;Apache-2.0;BSD;BSD-2-Clause;BSD-3-Clause;ISC;MIT;Unlicense\" --production --summary",
    "lint:prettier": "prettier . --write --ignore-unknown",
    "lint:prettier:ci": "prettier . --check --ignore-unknown",
    "start": "node .",
    "start:dev": "nodemon | pino-pretty --colorize",
    "test": "npm run lint && npm run jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint:prettier:ci && npm test"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageReporters": [
      "text",
      "lcovonly"
    ],
    "resetMocks": true,
    "testEnvironment": "node",
    "testTimeout": 10000
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development",
      "SUPPRESS_SUPPORT": 1
    },
    "ignore": [
      "test_resources"
    ],
    "verbose": true,
    "watch": [
      ".env",
      "src"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "autocannon": "^7.0.4",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.4.0",
    "glob": "^7.1.6",
    "husky": "~4",
    "jest": "^26.6.3",
    "license-checker": "^25.0.1",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.5.0",
    "prettier": "2.2.1"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "env-schema": "^2.1.0",
    "fastify": "^3.12.0",
    "fastify-accepts": "^2.0.1",
    "fastify-autoload": "^3.5.2",
    "fastify-bearer-auth": "^5.1.0",
    "fastify-cors": "^5.2.0",
    "fastify-disablecache": "^1.0.4",
    "fastify-helmet": "^5.2.0",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^4.3.1",
    "file-stream-rotator": "^0.5.7",
    "fluent-json-schema": "^2.0.4",
    "http-errors": "^1.8.0",
    "mssql": "^6.3.1",
    "pino": "^6.11.1"
  }
}
